                Allow buffering some shadow calculation
                LV_SHADOW_CACHE_SIZE is the max. shadow size to buffer,
                where shadow size is `shadow_width + radius`
                Caching has LV_SHADOW_CACHE_SIZE^2 RAM cost.
        
        choice
            prompt "Use other blend modes then normal (LV_BLEND_MODE_...)."
            default LV_USE_BLEND_MODES_ENABLE
            config LV_USE_BLEND_MODES_DISABLE
                bool "Disable LV_USE_BLEND_MODES."
            config LV_USE_BLEND_MODES_ENABLE
                bool "Enable LV_USE_BLEND_MODES."
        endchoice
        
        config LV_USE_BLEND_MODES
            int
            default 0 if LV_USE_BLEND_MODES_DISABLE
            default 1 if LV_USE_BLEND_MODES_ENABLE
        
        choice
            prompt "Use the 'opa_scale' style property to set the opacity of an object and it's children at once."
            default LV_USE_OPA_SCALE_ENABLE
            config LV_USE_OPA_SCALE_DISABLE
                bool "Disable LV_USE_OPA_SCALE."
            config LV_USE_OPA_SCALE_ENABLE
                bool "Enable LV_USE_OPA_SCALE."
        endchoice
        
        config LV_USE_OPA_SCALE
            int
            default 0 if LV_USE_OPA_SCALE_DISABLE
            default 1 if LV_USE_OPA_SCALE_ENABLE
       
        choice
            prompt "Use image zoom and rotation."
            default LV_USE_IMG_TRANSFORM_ENABLE
            config LV_USE_IMG_TRANSFORM_DISABLE
                bool "Disable LV_USE_IMG_TRANSFORM."
            config LV_USE_IMG_TRANSFORM_ENABLE
                bool "Enable LV_USE_IMG_TRANSFORM."
        endchoice

        config LV_USE_IMG_TRANSFORM
            int
            default 0 if LV_USE_IMG_TRANSFORM_DISABLE
            default 1 if LV_USE_IMG_TRANSFORM_ENABLE
        
        choice
            prompt "Enable object groups (for keyboard/encoder navigation)."
            default LV_USE_GROUP_ENABLE
            config LV_USE_GROUP_DISABLE
                bool "Disable LV_USE_GROUP."
            config LV_USE_GROUP_ENABLE
                bool "Enable LV_USE_GROUP."
        endchoice

        config LV_USE_GROUP
            int
            default 0 if LV_USE_GROUP_DISABLE
            default 1 if LV_USE_GROUP_ENABLE
        
        choice
            prompt "Enable GPU interface (only enabled 'gpu_fill_cb' and 'gpu_blend_cb' in the disp. drv."
            default LV_USE_GPU_ENABLE
            config LV_USE_GPU_DISABLE
                bool "Disable LV_USE_GPU."
            config LV_USE_GPU_ENABLE
                bool "Enable LV_USE_GPU."
        endchoice

        config LV_USE_GPU
            int
            default 0 if LV_USE_GROUP_DISABLE
            default 1 if LV_USE_GROUP_ENABLE
        
        choice
            prompt "Enable STM32 DMA2D."
            default LV_USE_GPU_STM32_DMA2D_DISABLE
            config LV_USE_GPU_STM32_DMA2D_DISABLE
                bool "Disable LV_USE_GPU_STM32_DMA2D."
            config LV_USE_GPU_STM32_DMA2D_ENABLE
                bool "Enable LV_USE_GPU_STM32_DMA2D."
        endchoice

        config LV_USE_GPU_STM32_DMA2D
            int
            default 0 if LV_USE_GPU_STM32_DMA2D_DISABLE
            default 1 if LV_USE_GPU_STM32_DMA2D_ENABLE
       
        choice
            prompt "Enable file system (might be required for images."
            default LV_USE_FILESYSTEM_ENABLE
            config LV_USE_FILESYSTEM_DISABLE
                bool "Disable LV_USE_FILESYSTEM."
            config LV_USE_FILESYSTEM_ENABLE
                bool "Enable LV_USE_FILESYSTEM."
        endchoice

        config LV_USE_FILESYSTEM
            int
            default 0 if LV_USE_FILESYSTEM_DISABLE
            default 1 if LV_USE_FILESYSTEM_ENABLE
        
        choice
            prompt "Add a 'user_data' to drivers and objects."
            default LV_USE_USER_DATA_DISABLE
            config LV_USE_USER_DATA_DISABLE
                bool "Disable LV_USE_USER_DATA."
            config LV_USE_USER_DATA_ENABLE
                bool "Enable LV_USE_USER_DATA."
        endchoice

        config LV_USE_USER_DATA
            int
            default 0 if LV_USE_USER_DATA_DISABLE
            default 1 if LV_USE_USER_DATA_ENABLE
        
        choice
            prompt "Show CPU usage and FPS count in the right bottom corner."
            default LV_USE_PERF_MONITOR_DISABLE
            config LV_USE_PERF_MONITOR_DISABLE
                bool "Disable LV_USE_PERF_MONITOR."
            config LV_USE_PERF_MONITOR_ENABLE
                bool "Enable LV_USE_PERF_MONITOR."
        endchoice

        config LV_USE_PERF_MONITOR
            int
            default 0 if LV_USE_PERF_MONITOR_DISABLE
            default 1 if LV_USE_PERF_MONITOR_ENABLE
        
        choice
            prompt "Use the functions and types from the older API if possible."
            default LV_USE_API_EXTENSION_V6_ENABLE
            config LV_USE_API_EXTENSION_V6_DISABLE
                bool "Disable LV_USE_API_EXTENSION_V6."
            config LV_USE_API_EXTENSION_V6_ENABLE
                bool "Enable LV_USE_API_EXTENSION_V6."
        endchoice
        
        config LV_USE_API_EXTENSION_V6
            int
            default 0 if LV_USE_API_EXTENSION_V6_DISABLE
            default 1 if LV_USE_API_EXTENSION_V6_ENABLE
    endmenu
    
    menu "Image decoder and cache"
        choice
            prompt "Enable indexed (pallete) images."
            default LV_IMG_CF_INDEXED_ENABLE
            config LV_IMG_CF_INDEXED_DISABLE
                bool "Disable LV_IMG_CF_INDEXED."
            config LV_IMG_CF_INDEXED_ENABLE
                bool "Enable LV_IMG_CF_INDEXED."
        endchoice

        config LV_IMG_CF_INDEXED
            int
            default 0 if LV_IMG_CF_INDEXED_DISABLE
            default 1 if LV_IMG_CF_INDEXED_ENABLE

        choice
            prompt "Enable alpha indexed images."
            default LV_IMG_CF_ALPHA_ENABLE
            config LV_IMG_CF_ALPHA_DISABLE
                bool "Disable LV_IMG_CF_ALPHA."
            config LV_IMG_CF_ALPHA_ENABLE
                bool "Enable LV_IMG_CF_ALPHA."
        endchoice

        config LV_IMG_CF_ALPHA
            int
            default 0 if LV_IMG_CF_ALPHA_DISABLE
            default 1 if LV_IMG_CF_ALPHA_ENABLE

        config LV_IMG_CACHE_DEF_SIZE
            int "Default image cache size."
            default 1
    endmenu

